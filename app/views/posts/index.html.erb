<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.url %></td>
        <td><%= post.board %></td>
        <td><%= link_to 'Show', board_post_path(post.board, post) %></td>
        <td><%= link_to 'Edit', edit_board_post_path(post.board, post) %></td>
        <td><%= link_to 'Destroy', board_post_path(post.board, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_board_post_path %>
